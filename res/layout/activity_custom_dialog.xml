<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_item_radius"
    android:backgroundTint="@color/insta_ligth_black"
    android:layout_centerHorizontal="true"
    android:padding="10dp"
    android:id="@+id/layout_root">

    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/user_image"
        android:layout_gravity="right"
        android:layout_width="180dp"
        android:layout_height="200dp"
        />


<!--    activity-->
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text_country_name"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/user_name"
                android:textColor="@color/insta_pink"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="20dp"
                android:lineSpacingExtra="4dp"
                android:layout_margin="10dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="3"
                />

        </LinearLayout>
<!--        MBTI-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/user_mbti"
                android:textColor="@color/insta_pink"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MBTI"
                android:textSize="20dp"
                android:lineSpacingExtra="4dp"
                android:layout_margin="10dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="3"
                />

        </LinearLayout>

        <!--        description-->
        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginTop="60dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/user_send"
                android:layout_marginRight="10dp"
                android:background="@drawable/message"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <ImageView
                android:layout_marginTop="60dp"
                android:id="@+id/user_home"
                android:layout_marginRight="10dp"
                android:background="@drawable/tab4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />



        </LinearLayout>

    </LinearLayout>




</FrameLayout>